@model CatalogPagingFilteringModel.SpecificationFilterModel
@using Nop.Web.Models.Catalog;
@{
    var notFilteredItemsGroups = Model.NotFilteredItems.GroupBy(x => x.SpecificationAttributeName);
}


    @*new theme html content*@

@if (Model.Enabled)
{
    if (Model.NotFilteredItems.Count > 0)
    {

        <div style="">
             <div class="block block-layered-nav block-layered-nav--no-filters">
                  <div class="block-title">
                       <strong><span>@T("Filtering.SpecificationFilter")</span></strong>
                  </div>
                  <div class="block-content toggle-content open accordion-open">
                       <p class="block-subtitle block-subtitle--filter">Filter</p>
                                                                                    
                       @{
                            var new_i = 0;
                        }
                       @foreach (var group in notFilteredItemsGroups)
                       {
                            var groupList = group.ToList();
                            <dl id="narrow-by-list2">       
                                  <div class="panel panel-default">                        
                                <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordian" href="#filter-accordion-@new_i">
                                    @groupList[0].SpecificationAttributeName
                                    <i class="fa fa-plus pull-right "></i>
                                </a>
                            </h4>
                        </div>
                                <div id="filter-accordion-@new_i" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <ul>
                                    @foreach (var spec in groupList)
                                    {
                                        <li><a href="@spec.FilterUrl">> @spec.SpecificationAttributeOptionName
                                                
                                            </a></li>

                                    }
                                
                                
                                </ul>
                            </div>
                        </div>                        
                            </div>
                             </dl>       
                            new_i++;
                       }                                  
                     
                  </div>
             </div>
        </div>                                   
    }
    if (Model.AlreadyFilteredItems.Count > 0)
    {
        <div style="padding-top:20px;">
             <div class="block block-layered-nav block-layered-nav--no-filters">
                  <div class="block-title">
                       <strong><span>@T("Filtering.SpecificationFilter.CurrentlyFilteredBy")</span></strong>
                  </div>
                  <div class="block-content toggle-content open accordion-open">
                       <p class="block-subtitle block-subtitle--filter">Filter</p>
                                                                                    
                        @foreach (var item in Model.AlreadyFilteredItems)
                        {
                            <div class="panel panel-default" style="margin-bottom:10px;">                        
                                <div class="panel-heading">
                                   <h4 class="panel-title">
                                       <a class="panel-title-anchor" href="@item.FilterUrl">@(item.SpecificationAttributeName): @item.SpecificationAttributeOptionName<i class="fa fa-check pull-right"></i></a>
                                   </h4>
                                </div>                                                                
                            </div>
                        }
                        <div class="panel panel-default">                        
                             <div class="panel-heading">
                                <h4 class="panel-title">
                                     <a href="@Model.RemoveFilterUrl">@T("Filtering.SpecificationFilter.Remove")<i class="fa fa-times pull-right"></i></a>
                                </h4>
                             </div>                                                                
                        </div>                                                       
                  </div>
             </div>
        </div>                        
    }    
}


















